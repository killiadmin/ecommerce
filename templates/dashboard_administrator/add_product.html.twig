{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
    <div class="container w-50">
        <div class="text-center mb-5">
            <h1>Ajouter un nouveau produit</h1>
        </div>

        {# Ouverture du formulaire #}
        {{ form_start(AddProduct) }}

        <div>
            {# Champ pour le titre du produit #}
            {{ form_label(AddProduct.title) }}
            {{ form_widget(AddProduct.title) }}
            {{ form_errors(AddProduct.title) }}
        </div>

        <div>
            {# Champ pour la description du produit #}
            {{ form_label(AddProduct.description) }}
            {{ form_widget(AddProduct.description) }}
            {{ form_errors(AddProduct.description) }}
        </div>

        <div>
            {# Champ pour la cat√©gorie du produit #}
            {{ form_label(AddProduct.category) }}
            {{ form_widget(AddProduct.category) }}
            {{ form_errors(AddProduct.category) }}
        </div>

        {# <div>
        #}{# Champ pour l'image du produit #}{#
        {{ form_label(AddProduct.picture) }}
        {{ form_widget(AddProduct.picture) }}
        {{ form_errors(AddProduct.picture) }}
    </div> #}

        <div>
            {# Champ pour le prix du produit #}
            {{ form_label(AddProduct.price) }}
            {{ form_widget(AddProduct.price) }}
            {{ form_errors(AddProduct.price) }}
        </div>

        <div>
            {# Champ pour l'activation (actif/inactif) #}
            {{ form_label(AddProduct.active) }}
            {{ form_widget(AddProduct.active) }}
            {{ form_errors(AddProduct.active) }}
        </div>

        <div>
            {# Bouton de soumission du formulaire #}
            <button type="submit" class="btn btn-primary">Ajouter le produit</button>
        </div>

        {# Fermeture du formulaire #}
        {{ form_end(AddProduct) }}
    </div>
{% endblock %}
