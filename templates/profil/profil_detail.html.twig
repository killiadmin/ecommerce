<div class="container mt-4 mb-4 p-3 d-flex justify-content-center">
    <div class="card p-4 shadow">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <div class="d-flex w-100 flex-row-reverse">
                <span class="p-2 rounded-pill border badge-professional shadow fw-bold bg-custom1 text-black" {% if not isProfessional %} style="display: none;"{% endif %}>
                    Professionnel
                </span>
                <span class="p-2 rounded-pill border badge-particular account-mode-badge shadow fw-bold bg-custom3 text-white" {% if isProfessional %} style="display: none;"{% endif %}>
                    Particulier
                </span>
            </div>
            <div class="overflow-hidden border avatar text-center align-content-center">
                <img src="/img/avatar/{{ user.avatar }}" height="140" width="140" alt="avatar"/>
            </div>
            <span class="name mt-3">
                {{ user.firstname }} {{ user.lastname }}
            </span>
            <div class="d-flex flex-row justify-content-center align-items-center gap-2">
                <span class="idd1">
                    {{ user.email }}
                </span>
            </div>
            <div class=" d-flex mt-4">
                <a class="btn btn-dark btn-profil" href="{{ path("app_basket") }}">
                    Mon panier
                </a>
            </div>
            <div class=" d-flex mt-4">
                <a class="btn btn-dark btn-profil" href="{{ path("app_list-orders") }}">
                    Mes commandes
                </a>
            </div>
            <div class=" d-flex mt-4">
                <a class="btn btn-dark btn-profil" href="{{ path('profil_edit') }}">
                    Modifier mon profil
                </a>
            </div>
            <div class="d-flex flex-column mt-4 align-items-center">
                    <span class="account-mode-message">
                        {% if isProfessional %}
                            Vous êtes particulier ?
                        {% else %}
                            Vous êtes professionnel ?
                        {% endif %}
                    </span>
                <button class="account-toggle-button{% if isProfessional %} active{% endif %}" aria-label="Toggle Account Mode">
                    <span></span>
                    <span>
                        <i class="fa-solid fa-house-user"></i>
                        <i class="fa-solid fa-building"></i>
                    </span>
                </button>
            </div>
            <div class="gap-3 mt-4 icons d-flex flex-row justify-content-center align-items-center">
                <span>
                    <i class="fa fa-twitter"></i>
                </span>
                <span>
                    <i class="fa fa-facebook-f"></i>
                </span>
                <span>
                    <i class="fa fa-instagram"></i>
                </span>
                <span>
                    <i class="fa fa-linkedin"></i>
                </span>
            </div>
            <div class=" px-2 rounded mt-4 date ">
                <span class="join">
                    Rejoint le {{ user.createdAt|date('d / m / y') }}
                </span>
            </div>
        </div>
    </div>
</div>
