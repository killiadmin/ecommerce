{% extends 'base.html.twig' %}

{% block title %}Paiement !{% endblock %}

{% block body %}
    <h1 class="text-center mb-5">
        Paiement
    </h1>
    <div class="container">
        <div class="row h-100">
            <div class="col-md-4 border p-3 text-center d-flex flex-column justify-content-between">
                <div>
                    <h5>Sélection de votre choix de paiement</h5>
                    <div class="border payment-options">
                        <div class="payment-option">Carte Bleue</div>
                        <div class="payment-option">Visa</div>
                        <div class="payment-option">Mastercard</div>
                        <div class="payment-option">PayPal</div>
                        <div class="payment-option">Apple Pay</div>
                    </div>
                </div>
                <div class="mt-3 p-3 text-center">
                    <a class="btn btn-secondary shadow" href="#" role="button">
                        Ajouter un moyen de paiement
                    </a>
                </div>
            </div>
            <div class="col-md-8">
                <div class="border mb-3 p-3 text-center">
                    <h5 class="text-center">Votre paiement sélectionné </h5>
                    <div class="carte shadow mx-auto">
                        <div class="logo">CARTE BLEUE</div>
                        <div class="d-flex justify-content-center align-items-center float-end"
                             style="max-width:60px; max-height:40px;">
                            <img class="w-100 h-100 object-fit-contain" alt="loco cb"
                                 src="{{ asset('img/payment/logo_cb.png') }}">
                        </div>
                        <div class="puce"></div>
                        <div class="numero">1234 5678 9012 3456</div>
                        <div class="details">
                            <div class="titulaire">
                                Titulaire<br>
                                <strong>JEAN DUPONT</strong>
                            </div>
                            <div class="expiration">
                                Expiration<br>
                                <strong>12/25</strong>
                            </div>
                        </div>
                        <div class="reseau">
                            <div class="circle orange"></div>
                            <div class="circle red"></div>
                            <div class="text">Mastercard</div>
                        </div>
                    </div>
                </div>
                <div class="border p-3 text-center">
                    <h5>Récapitulatif de votre commande</h5>
                    <table class="order-summary table table-striped">
                        <thead>
                        <tr>
                            <th>Article</th>
                            <th>Quantité</th>
                            <th>Prix unitaire</th>
                            <th>Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Article 1</td>
                            <td>2</td>
                            <td>20 €</td>
                            <td>40 €</td>
                        </tr>
                        <tr>
                            <td>Article 2</td>
                            <td>1</td>
                            <td>15 €</td>
                            <td>15 €</td>
                        </tr>
                        <tr>
                            <td>Article 3</td>
                            <td>3</td>
                            <td>10 €</td>
                            <td>30 €</td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="total mt-3">
                        <strong>Total : 85 €</strong>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex gap-3 mt-3 flex-row-reverse ms-auto w-75">
            <a class="btn btn-success shadow" href="#" role="button">
                Passer commande
            </a>
            <a class="btn btn-secondary shadow" href="{{ path('app_basket') }}" role="button">
                Annuler
            </a>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/payment.js') }}"></script>
{% endblock %}
